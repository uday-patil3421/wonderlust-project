<%layout("/layouts/boilerPlate.ejs")%>

<div class="row mt-0">
  <div class="col-4 offset-4">
    <h3 class="mt-3 mb-2">SignUp</h3>

    <form novalidate class="needs-validation" method="POST" action="/signup %>">
      <div class="mt-2">
        <label for="username" class="form-lable">username</label>
        <input
          name="username"
          type="text"
          class="form-control"
          pattern=".*\S.*"
          required
        />
      </div>
      <div class="mt-2">
        <label for="email" class="form-lable">email</label>
        <input
          name="email"
          class="form-control"
          type="email"
          pattern=".*\S.*"
          required
        />
      </div>

      <div class="mt-2">
        <label for="password" class="form-lable">password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          pattern=".*\S.*"
          required
        />
      </div>

      <button class="btn btn-success mt-3 mb-4">signUp</button>
    </form>
  </div>
</div>
