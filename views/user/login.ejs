<%layout("/layouts/boilerPlate.ejs")%>

<div class="row mt-4">
    <div class="col-3 offset-4">
      <h3 class="mt-3 mb-2">Login</h3>

      <form
        novalidate
        class="needs-validation"
        method="POST"
        action="/login %>"
      >
        <div class="mt-2">
          <label for="username" class="form-lable">username</label>
          <input
            name="username"
            type="text"
            class="form-control"
            required
          />

          <div class="mt-2">
            <label for="password" class="form-lable">password</label>
            <input
              name="password"
              type="password"
              class="form-control"
              required
            />
            </div>
        <button class="btn btn-success mt-3 mb-4">login</button>
      </form>
    </div>
</div>